<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="55.0dip"
        android:background="#ffffffff">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BOOK A TABLE"
            android:textColor="#ff313131"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative1"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scrollbars="horizontal">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/horizontal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal"
        android:layout_marginTop="2.0dip"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputName"
            style="@style/parent"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/grey">

            <EditText
                android:id="@+id/editTextName"
                style="@style/modifiedEditText"
                android:hint="Customer Name"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputMob"
            style="@style/parent"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/grey">

            <EditText
                android:id="@+id/editTextMob"
                style="@style/modifiedEditText"
                android:hint="Mob No"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_below="@id/horizontal2"
        android:layout_marginTop="2.0dip"
        android:background="#ffffffff"
        android:visibility="gone">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="15.0dip"
            android:text="ORDERING"
            android:textColor="#ff919191"
            android:textSize="16.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/linear2"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_below="@+id/linear"
        android:layout_marginTop="2.0dip"
        android:background="#ffffffff"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/noperson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="15.0dip"
                android:text="Number of person"
                android:textColor="#ff919191"
                android:textSize="16.0dip" />

            <TextView
                android:id="@+id/children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15.0dip"
                android:text="Children"
                android:textColor="#ff4b4b4b" />

            <Spinner
                android:id="@+id/spinner_children"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/children" />

            <TextView
                android:id="@+id/adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="15.0dip"
                android:layout_toLeftOf="@+id/spinner_children"
                android:text="Adults,"
                android:textColor="#ff4b4b4b" />

            <Spinner
                android:id="@+id/spinner_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/adult" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:layout_marginTop="10.0dip"
        android:background="#ffffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">

            <TextView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="15.0dip"
                android:text="MENU"
                android:textColor="#ff919191"
                android:textSize="16.0dip" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewmore1"
        android:layout_below="@+id/linear3">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/menuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            />
    </LinearLayout>

    <TextView
        android:id="@id/viewmore1"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_above="@+id/ordernow"
        android:layout_marginTop="2.0dip"
        android:background="#ffffffff"
        android:gravity="center"
        android:text="View More"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ordernow"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_alignParentBottom="true"
        android:background="#fff4c900"
        android:gravity="center">

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10.0dip"
            android:gravity="center|left"
            android:text="Total-0.00"
            android:textColor="#ff292929"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/right_arrow"
            android:text="ORDER"
            android:id="@+id/orderBtn"
            android:textColor="#ff292929" />
    </RelativeLayout>
</RelativeLayout>